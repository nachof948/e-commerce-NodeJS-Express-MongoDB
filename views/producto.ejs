<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/imagenes/Hero-Principal.png" type="image/x-icon">
    <link rel="stylesheet" href="/Hojas de estilo/producto.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>FOODIE</title>
</head>
<body>
    <header style="background-color: rgb(132,183,78);">
        <div class="contenedor-header">
            <a class="empresa" href="/">FOODIED</a>
            <nav>
                <a href="/">Inicio</a>
                <a href="#menuEspecial">Menu</a>
                <a href="#sobreNosotros">Sobre Nosotros</a>
                <a href="#contactos">Contacto</a>
            </nav>
            <div class="header-derecha">
                <div class="header-iconos">
                    <a href="#"><i class="bi bi-search"></i></a>
                    <button id="carrito" href="#"><i class="bi bi-bag"></i></button>
                </div>
                
                <%if(user) {%>
                    <div class="perfil">
                        <img src=<%=user.image%> alt="">
                        <a href="/auth/logout"><%=user.username%></a>
                    </div>
                    <%}else{%>
                    <div class="registrarse">
                        <a href="/auth/signup">Registarse</a>
                    </div>
                <%}%>
            </div>
        </div>

    </header>
    
    <section class="contenedor-producto">
            <div class="producto">
                    <img class="img-producto"  src="<%=producto.imgUrl%>" >
        
            <div class="segundo">
                    <h1 class="nombre-producto"><%=producto.nombre%></h1>
                    <div class="grupo1">
                        <div class="alfa">
                            <div class="estrellitas">
                                <img class="miniEstrella" src="/imagenes/icons8-estrella.png" alt="estrella">
                                <img class="miniEstrella" src="/imagenes/icons8-estrella.png" alt="estrella">
                                <img class="miniEstrella" src="/imagenes/icons8-estrella.png" alt="estrella">
                                <img class="miniEstrella" src="/imagenes/icons8-estrella.png" alt="estrella">
                                <img class="miniEstrella" src="/imagenes/icons8-estrella.png" alt="estrella">
                            </div> 
                            <p><%=producto.rating%></p>  
                        </div>
                        <div class="beta">
                            <p class="palabra">Vendidos</p>
                            <p><%=producto.vendidos%></p>
                        </div>
                    </div>
                        
                    <h2 class="precio-producto">$<%=producto.precio%></h2>
                    <p class="texto"><%=producto.descripcionDetallada%></p>
                        <select class="opciones" name="PORCIONES" id="PORCIONES">
                        <option value="PEQUEÑA">PEQUEÑA</option>
                        <option value="MEDIANA">MEDIANA</option>
                        <option value="GRANDE">GRANDE</option>
                        </select>
                        <div class="input-group">
                            <button type="button" class="menos">-</button>
                                <input class="cantidad" type="number" id="cantidad" name="cantidad" min="0" max="100" step="1">
                            <button type="button" class="mas">+</button>
                        </div>
                        <%if (user) {%>
                            <form class="comprar" action="/compras" method="post">
                                <input type="hidden" name="nombre" value="<%=producto.nombre%>">
                                <input type="hidden" name="imagen" value="<%=producto.imgUrl%>">
                                <input type="hidden" name="precio" value="<%=producto.precio%>">
                                <button class="comprar-ahora" type="submit">Comprar Ahora</button>
                            </form>
                        <%}else{%>
                            <a href="/auth/signup">Comprar Ahora</a>
                        <%}%>
            </div>
        </div>
    </section>
    

    <%- include('../views/partials/footer.ejs') %>
<script src="js/header.js"></script>
</body>
</html>

