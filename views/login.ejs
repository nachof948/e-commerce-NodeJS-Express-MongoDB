<body>
    <section class="ingreso">
        <div class="img">
            <div>
                <h1 class="logo">FOODIED</h1>
            </div>
                <img class="ensa" src="/ensalada.jpg" alt="">
        </div>
        <div class="partedos">
            <div class="iniciar">
                <h1>Iniciar Sesion</h1>
            </div>
            <div class="formulario">
                <form for="" method="post">
                    <div class="persona">
                        <img class="imagen" src="/icons8-persona-24.png" alt="">
                        <input class="email" name="usuario" type="text" required  placeholder="Nombre de Usuario">
                    </div>
                    <div class="persona">
                        <img class="imagen" src="/icons8-candado.svg" alt="">
                        <input class="email" name="password" type="password" maxlength="12" required  placeholder="Contraseña">
                    </div>
                    <button class="btn-form">Iniciar sesion </button>
                    <div class="metodos">
                        ────────── Otros Metodos ──────────
                    </div>
                    <div class="opcio">
                        <div class="facebook">    
                            <a class="facebook-enlace" href="/auth/facebook"><i class="bi bi-facebook"></i>Facebook</a>
                        </div>
                        <div class="google">    
                            <a class="google-enlace" href="/auth/google"><i class="bi bi-google"></i>Google</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="regi">
                <p class="preg">No tenes una cuenta?</p>
                <a href="/auth/signup">Registrate</a>
                <span style="margin: 0px 0px 0px 8px;">/</span>
                <a href="/">Volver al Inicio</a>
            </div>
        </div>
    </section>
